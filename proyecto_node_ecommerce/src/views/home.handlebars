<div>
    <h1>Estos son los productos agregados hasta el momento:</h1>

    <ul id="productList">
        {{#if products.length}}
            {{#each products}}
                <li>
                    <b>{{this.user.first_name}} {{this.user.last_name}}</b> creó el siguiente producto: <br>
                    Titulo: {{this.title}} <br>
                    Descripción: {{this.description}} <br>
                    Código: {{this.code}} <br>
                    Precio: {{this.price}} <br>
                    Stock: {{this.stock}} <br>
                    Categoría: {{this.category}} <br><br>
                    <button onclick="addToCart('{{this._id}}')">Agregar al carrito</button>
                    <a href="/products/{{this._id}}">
                        <button>Abrir producto completo</button>
                    </a>
                </li>
            {{/each}}
            {{else}}
                <p>No hay productos ingresados!</p>
        {{/if}}
    </ul>
    
</div>

